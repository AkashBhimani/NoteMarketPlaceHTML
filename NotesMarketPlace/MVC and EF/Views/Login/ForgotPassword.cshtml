@model NotesMarketPlace.Models.UsersViewModel
<!DOCTYPE html>

<html>

<head>

    <title>Forgot Password</title>

    <!-- important meta tage-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="icon" href="~/Content/Images/home/favicon.ico" />

    <!-- font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- icons -->
    <link href="~/Content/Front/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS-->
    <link href="~/Content/Front/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <!-- css page -->
    <link href="~/Content/Front/style.css" rel="stylesheet" />

    <!-- Responsive CSS -->
    <link href="~/Content/Front/responsive.css" rel="stylesheet" />

</head>

<body>

    <!--Forgot Password Section -->
    <section class="user-page-banner">

        <div class="text-center">
            <img class="top-logo" src="~/Content/Images/general/top-logo.png" alt="Logo">
        </div>

        <div class="user-input-field">

            <div class="title text-center">
                <h3>Forgot Password</h3>
                <p> Enter your email to reset your password </p>
            </div>

            @if (TempData["NotRegistered"] != null)
            {
                <div class="validation-error">
                    <p>@TempData["NotRegistered"].ToString()</p>
                </div>
            }

            @using (Html.BeginForm("VerifyEmailAddress", "Login", FormMethod.Post))
            {

                <div class="form-group">
                    <label for="email" class="email">Email</label>
                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "error" })
                </div>

                <button type="submit" class="btn">SUBMIT</button>
            }


        </div>

    </section>

    <!-- Jquery Module -->
    <script src="~/Scripts/Front/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/Front/bootstrap/bootstrap.min.js"></script>

    <!-- Validation JS -->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- Javascript Page -->
    <script src="~/Scripts/Front/script.js"></script>

</body>

</html>
