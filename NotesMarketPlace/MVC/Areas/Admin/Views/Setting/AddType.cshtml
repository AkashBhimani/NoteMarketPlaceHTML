@model NotesMarketPlace.Areas.Admin.Data.AddTypeViewModel

@{
    ViewBag.Title = "Add Type";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Typr input field -->
<div class="add-type main-section">

    <div class="container section-container">

        <div class="row">

            <div class="col-md-12 heading">
                <h2>Add Type</h2>
            </div>

            @using (Html.BeginForm("AddType", "Setting", FormMethod.Post))
            {
                <div class="col-md-6 col-sm-12">

                    @if (Model != null)
                    {
                        <div>@Html.HiddenFor(x => x.ID)</div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(x => x.Type, "Type *", new { @class = "name-of-input" })
                        @Html.TextBoxFor(x => x.Type, new { @class = "form-control", @placeholder = "Enter type" })
                        @Html.ValidationMessageFor(x => x.Type, "", new { @class = "error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Description, "Description *", new { @class = "name-of-input" })
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Enter your description", @rows = "6" })
                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "error" })
                    </div>
                    <button type="submit" class="btn submit">SUBMIT</button>
                </div>
            }

        </div>

    </div>

</div>

