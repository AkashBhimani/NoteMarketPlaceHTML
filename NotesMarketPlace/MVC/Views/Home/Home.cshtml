                            <li><a href="@Url.Action("NoteList","SearchNotes")">Search Notes</a></li>
                            <li><a href="@Url.Action("Dashboard","User")">Sell Your Notes</a></li>

                            @if (User.Identity.IsAuthenticated)
                            {
